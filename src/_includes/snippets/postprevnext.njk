{% set previousPost = collections.posts | getPreviousCollectionItem %}
{% set nextPost = collections.posts | getNextCollectionItem %}
<div class="col border-top text-end py-vh-3 d-flex align-items-center justify-content-end">
  {# {% include 'svg/arrow-left.svg' %} #}
  {% if nextPost %}
  <a href="{{ nextPost.url }}" class="me-2 display-7 text-muted">{{ nextPost.data.title }}</a>
  {% else %}
  {# <div class="h1 text-muted display-4 opacity-25 fw-bolder">Welcome!</div> #}
  {% endif %}
</div>
<div class="col  border-top border-end py-vh-3 d-flex align-items-center">
  {% if previousPost %}

    {% include 'svg/arrow-right.svg' %}
    <a href="{{ previousPost.url }}" class="ms-2 display-6">{{ previousPost.data.title }}</a>
  {% else %}
    {% include 'snippets/donate.njk' %}
  {% endif %}
</div>